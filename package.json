{
  "name": "app",
  "private": true,
  "engines": {
    "node": "24.13.0",
    "npm": "11.6.2"
  },
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --minify --format=esm --outdir=app/assets/builds --public-path=/assets",
    "build:watch": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets --watch",
    "build:css": "npx @tailwindcss/cli -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --minify",
    "build:css:watch": "npx @tailwindcss/cli -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --watch",
    "analyze": "bundle-analyzer ./app/assets/builds --bundle-name=paychecq"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.23",
    "daisyui": "^5.5.17"
  },
  "devDependencies": {
    "@codecov/bundle-analyzer": "^1.9.1",
    "@tailwindcss/cli": "^4.1.18",
    "esbuild": "^0.27.2",
    "tailwindcss": "^4.1.18"
  }
}
