<%= turbo_frame_tag "profile" do %>
  <%= form_with model: @user, url: profile_path, method: :patch, class: "mt-6 space-y-6", html: { novalidate: true } do |form| %>
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <%= render "components/text_input", form: form, resource: @user, field: :first_name, required: true, autocomplete: "given-name" %>

      <%= render "components/text_input", form: form, resource: @user, field: :last_name, required: true, autocomplete: "family-name" %>
    </div>

    <%= render "components/email_input", form: form, resource: @user, field: :email_address, required: true, autocomplete: "username" %>

    <div class="card-actions justify-end">
      <%= link_to "Cancel", profile_path, class: "btn btn-ghost" %>

      <%= form.submit "Save", class: "btn btn-primary" %>
    </div>
  <% end %>
<% end %>
