<%= turbo_frame_tag "password" do %>
  <%= form_with url: update_password_profile_path, method: :patch, class: "mt-6 space-y-6", html: { novalidate: true } do |form| %>
    <%= render "components/password_input", form: form, resource: @user, field: :current_password, required: true, autocomplete: "current-password" %>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <%= render "components/password_input", form: form, resource: @user, field: :password, required: true, autocomplete: "new-password" %>

      <%= render "components/password_input", form: form, resource: @user, field: :password_confirmation, required: true, autocomplete: "new-password" %>
    </div>

    <div class="card-actions justify-end">
      <%= link_to "Cancel", profile_path, class: "btn btn-ghost" %>
      
      <%= form.submit "Update Password", class: "btn btn-primary" %>
    </div>
  <% end %>
<% end %>
