<div class="flex min-h-dvh flex-col items-center justify-center">
  <div>
    <%= image_tag "light/logo.svg", alt: "PayChecQ Logo", class: "mx-auto h-10 w-auto dark:hidden" %>
    <%= image_tag "dark/logo.svg", alt: "PayChecQ Logo", class: "mx-auto h-10 w-auto not-dark:hidden" %>
    
    <h2 class="mt-6 text-center text-2xl/9 font-bold tracking-tight">Sign in to your account</h2>
  </div>

  <div class="card card-xl bg-base-100 mt-10 w-full max-w-120 shadow-md">
    <div class="card-body">
      <%= form_with url: session_path, class: "space-y-6", html: { novalidate: true } do |form| %>
        <%= render "components/email_input", form: form, field: :email_address, required: true, autofocus: true, autocomplete: "username" %>

        <%= render "components/password_input", form: form, field: :password, required: true, autocomplete: "current-password" %>

        <div class="flex justify-end">
          <div class="text-sm/6">
            <%= link_to "Forgot password?", new_password_path, class: "link link-primary link-hover" %>
          </div>
        </div>

        <%= form.submit "Sign in", class: 'btn btn-primary w-full' %>
      <% end %>
    </div>
  </div>

  <p class="mt-10 mb-10 text-center text-sm/6">New here? <%= link_to "Join now!", new_user_path, class: "link link-primary link-hover" %></p>
</div>
