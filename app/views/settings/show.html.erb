<div class="flex flex-col items-center">
  <div class="card card-lg bg-base-100 mt-10 w-full max-w-240 shadow-glow">
    <div class="card-body">
      <div class="flex items-center justify-between">
        <h2 class="card-title">Linked Account</h2>

        <% if @plaid_link_token %>
          <div data-controller="plaid-link" data-plaid-link-token-value="<%= @plaid_link_token %>">
            <button type="button" class="btn btn-primary btn-sm" data-plaid-link-target="button" data-action="plaid-link#open">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
              Link Account
            </button>
          </div>
        <% end %>
      </div>

      <div class="mt-6">
        <% if @bank %>
          <% if @bank.error? %>
            <div class="alert alert-error mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z" />
              </svg>

              <div>
                <p class="font-medium">Connection Error</p>
                <p class="text-sm">Your bank credentials need to be updated. Please reconnect your account.</p>
              </div>

              <% if @plaid_update_link_token %>
                <div data-controller="plaid-link" data-plaid-link-token-value="<%= @plaid_update_link_token %>" data-plaid-link-mode-value="update">
                  <button type="button" class="btn btn-sm" data-plaid-link-target="button" data-action="plaid-link#open">
                    Reconnect
                  </button>
                </div>
              <% end %>
            </div>
          <% elsif @bank.pending_expiration? %>
            <div class="alert alert-warning mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>

              <div>
                <p class="font-medium">Consent Expiring Soon</p>
                <p class="text-sm">Your bank connection will expire soon. Please re-authorize to continue syncing.</p>
              </div>

              <% if @plaid_update_link_token %>
                <div data-controller="plaid-link" data-plaid-link-token-value="<%= @plaid_update_link_token %>" data-plaid-link-mode-value="update">
                  <button type="button" class="btn btn-sm" data-plaid-link-target="button" data-action="plaid-link#open">
                    Re-authorize
                  </button>
                </div>
              <% end %>
            </div>
          <% elsif @bank.disconnected? %>
            <div class="alert alert-error mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1M3 3l18 18" />
              </svg>

              <div>
                <p class="font-medium">Account Disconnected</p>
                <p class="text-sm">You revoked access at your bank. Please delete this account and link again to resume syncing.</p>
              </div>
            </div>
          <% end %>

          <div class="relative">
            <div class="collapse collapse-arrow bg-base-200 pr-12">
              <input type="checkbox" title="<%= @bank.plaid_institution_name %>" />
              <div class="collapse-title font-medium pr-20">
                <div class="flex items-center gap-3">
                  <% if @bank.logo_data_uri %>
                    <img src="<%= @bank.logo_data_uri %>" alt="<%= @bank.name %>" class="h-6 w-6 rounded" />
                  <% else %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                    </svg>
                  <% end %>

                  <span><%= @bank.name %></span>
                </div>
              </div>
              <div class="collapse-content">
                <% if @bank.bank_accounts.any? %>
                  <div class="space-y-2 pt-2">
                    <% @bank.bank_accounts.each do |account| %>
                      <div class="flex items-center justify-between py-2">
                        <div class="flex items-center gap-2">
                          <span class="font-medium"><%= account.name %></span>

                          <% if account.masked_account_number.present? %>
                            <span class="text-base-content/60 hidden sm:inline">•••• <%= account.masked_account_number %></span>
                          <% end %>
                        </div>

                        <% if account.current_balance %>
                          <span class="font-medium"><%= number_to_currency(account.current_balance) %></span>
                        <% end %>
                      </div>
                    <% end %>
                  </div>

                  <% last_synced = @bank.bank_accounts.maximum(:last_synced_at) %>

                  <% if last_synced %>
                    <p class="text-xs text-base-content/50 mt-4">Last synced <%= time_ago_in_words(last_synced) %> ago</p>
                  <% end %>
                <% else %>
                  <p class="text-base-content/60">No accounts found</p>
                <% end %>
              </div>
            </div>
            <label for="unlink_modal" class="btn btn-ghost btn-sm text-error absolute right-2 top-1/2 -translate-y-1/2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
              </svg>
            </label>
          </div>

          <input type="checkbox" id="unlink_modal" class="modal-toggle" />
          <div class="modal modal-bottom sm:modal-middle">
            <div class="modal-box">
              <h3 class="text-lg font-bold">Delete Account</h3>

              <p class="py-4">Are you sure you want to delete this account? This will unlink from your bank and permanently delete all associated data.</p>

              <div class="modal-action">
                <label for="unlink_modal" class="btn">Cancel</label>

                <%= link_to "Delete", bank_path(@bank), data: { turbo_method: :delete, controller: "loading-button", loading_button_text_value: "Deleting..." }, class: "btn btn-error" %>
              </div>
            </div>
            
            <label class="modal-backdrop" for="unlink_modal">Close</label>
          </div>
        <% else %>
          <div class="text-center py-8">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-base-content/40" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
            </svg>

            <p class="mt-4 text-base-content/60">No linked account yet</p>

            <p class="mt-1 text-sm text-base-content/40">Link your account to get started</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
